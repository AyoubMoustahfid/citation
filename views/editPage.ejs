      <body id="body">
          <div class="container">
            <h2>EDIT QUOTE</h2>
            <form action="/update" method="POST">
              <div class="row100">
                <div class="col">
                  <div class="inputBox">
                     <input type="hidden" name="id" required="required" value="<%= author.id %>">
   
                  </div>
                </div>   
             </div>   
            <div class="row100">
               <div class="col">
                 <div class="inputBox">
                    <input type="text" name="name" required="required" value="<%= author.name %>">
                    <span class="text">Name</span>
                    <span class="line"></span>
                 </div>
               </div>   
            </div>   
            <div class="row100"> 
              <div class="col">
                <div class="inputBox textarea">
                  <textarea required="required" value="<%= author.description %>" name="description"></textarea> 
                  <span class="text">your message here</span>
                  <span class="line"></span>
                </div>
              </div> 
            </div>   
            <div class="row100">
              <div class="col">
                <div class="inputBox">
                   <input type="text" name="category" required="required">
                   <span class="text">Category</span>
                   <span class="line"></span>
                </div>
              </div>   
           </div> 
            <div class="row100"> 
              <div class="col">
                <div class="inputBox textarea">
                  <input type="file" name="img" required="required" value="<%= author.img %>">
                  <span class="text"></span>
                  <span class="line"></span>
                </div>
              </div> 
            </div> 
            
            <div class="row100"> 
              <div class="col">
                 <input type="submit" value="Send">
              </div>
            </div>           
            </div>
          </form>
          </div>


